{
  "name": "docker-visualisation",
  "version": "0.1.0",
  "description": "An experimental project for HackerDay",
  "scripts": {
    "build": "babel src -w -d dist",
    "serve": "browser-sync start --server --files '*.html, dist/scripts/*.js'",
    "watch:js": "onchange 'src/scripts/*.js' -- npm run build",
    "watch:all": "parallelshell 'npm run serve' 'npm run watch:js'"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhe/docker-visualisation.git"
  },
  "keywords": [
    "docker",
    "data",
    "visualisation"
  ],
  "author": "Zhe Zhang <neomana@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "d3": "3.5.17"
  },
  "devDependencies": {
    "babel-cli": "6.8.0",
    "babel-preset-es2015": "6.6.0",
    "browser-sync": "2.12.8",
    "onchange": "2.4.0",
    "parallelshell": "2.0.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
